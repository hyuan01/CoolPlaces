<% layout('layouts/boilerplate') %> 

<div id="map"></div>
<h1> LIST OF COOL PLACES </h1>
<div class="mb-3">
    <a class="btn btn-primary" href="/coolplaces/new">Add a cool place!</a>
</div>



<% for (let place of places) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if(place.image.length) { %>
                <img class="img-fluid" alt="" src="<%=place.image[0].url%>">
                <% } else { %>
                <img class="img-fluid" alt="" src="https://res.cloudinary.com/dm1lmzevi/image/upload/v1668162797/CoolPlaces/istockphoto-1147544807-612x612_b4v3m6.jpg">
                <% } %>
            </div>

            <div class="col-mg-8">
                <div class="card-body">
                    <h5 class="card-title"><%= place.title %></h5>
                    <p class="card-text"><small class="text-muted"><%= place.location %></small></p>
                    <a class="btn btn-primary" href="/coolplaces/<%= place._id %>">View Details</a>
                </div>
            </div>
        </div>
    </div>
<% }%>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const places = {features: <%- JSON.stringify(places) %>};
</script>

<script src="/scripts/clusterMap.js"></script>